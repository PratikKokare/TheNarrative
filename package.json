{
  "name": "the-narrative-frontend",
  "version": "2.0.0",
  "description": "TwoSides News - Multi-perspective news analysis platform",
  "homepage": "https://the-narrative-two.vercel.app",
  "private": true,
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "axios": "^1.6.2",
    "gsap": "^3.12.2",
    "react-infinite-scroll-component": "^6.1.0",
    "react-select": "^5.8.0",
    "moment": "^2.29.4",
    "react-loading-skeleton": "^3.3.1",
    "react-error-boundary": "^4.0.11",
    "react-intersection-observer": "^9.5.2",
    "react-virtual": "^2.10.4",
    "web-vitals": "^3.5.0",
    "react-helmet-async": "^1.3.0",
    "react-router-dom": "^6.8.1",
    "react-query": "^3.39.3",
    "framer-motion": "^10.16.16",
    "react-hot-toast": "^2.4.1",
    "react-hook-form": "^7.48.2",
    "react-aria": "^3.32.1",
    "focus-visible": "^5.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.5.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-import": "^2.29.0",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "prettier": "^3.1.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "@axe-core/react": "^4.8.2",
    "lighthouse": "^11.4.0",
    "workbox-cli": "^7.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "CI=true react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "lint:css": "stylelint src/**/*.css",
    "lint:css:fix": "stylelint src/**/*.css --fix",
    "format": "prettier --write src/**/*.{js,jsx,ts,tsx,css,md}",
    "format:check": "prettier --check src/**/*.{js,jsx,ts,tsx,css,md}",
    "analyze": "npm run build && npx bundle-analyzer build/static/js/*.js",
    "lighthouse": "lhci autorun",
    "audit": "npm audit --audit-level moderate",
    "type-check": "tsc --noEmit",
    "serve": "serve -s build -l 3000",
    "prebuild": "npm run lint && npm run test:ci"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "no-console": "warn",
      "react-hooks/exhaustive-deps": "warn",
      "jsx-a11y/no-autofocus": "off",
      "react/prop-types": "off",
      "no-unused-vars": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all",
      "not ie <= 11"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/reportWebVitals.js",
      "!src/**/*.test.{js,jsx}",
      "!src/setupTests.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  },
  "proxy": "http://localhost:4000",
  "keywords": [
    "news",
    "bias-analysis",
    "multi-perspective",
    "react",
    "frontend",
    "news-aggregation",
    "artificial-intelligence"
  ],
  "author": {
    "name": "TwoSides News Team",
    "email": "contact@twosidesnews.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/twosides-frontend.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/twosides-frontend/issues"
  }
}
